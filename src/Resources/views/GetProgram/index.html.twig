{% extends "MMCFestivalBundle:Default:layout.html.twig" %}

{% trans_default_domain 'getProgram' %}

{% block content %}
    {{ parent() }}

    <p><h2 class="art-title">{{ 'title_content'|trans({} ,'getProgram') }}</h2></p>

    <p>{{ 'subtitle_content'|trans({} ,'getProgram') }}</p>

    <form action="{{ path('mmc_festival_get_program') }}" method="post" class="container-fluid">
        {{ form_widget(form._token) }}
        <div class="row">
            <div class="col-xs-3">
                {{ form_row(form.civility) }}
            </div>
            <div class="col-xs-5">
                {{ form_row(form.lastname) }}
            </div>
            <div class="col-xs-4">
                {{ form_row(form.firstname) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-8">
                {{ form_row(form.email) }}
            </div>
            <div class="col-xs-4">
                {{ form_row(form.phone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                {{ form_row(form.address) }}
            </div>
            <div class="col-xs-2">
                {{ form_row(form.postalCode) }}
            </div>
            <div class="col-xs-4">
                {{ form_row(form.city) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {{ form_row(form.receiveInformation) }}
            </div>
            <div class="col-xs-12">
                {{ 'cnil.before'|trans({} ,'getProgram')|raw }}
                {{ form_row(form.notTransmitData) }}
                {{ 'cnil.after'|trans({} ,'getProgram')|raw }}
            </div>
            <div class="col-xs-12">
                <input type="submit" class="btn btn-festival btn-block" value="Envoyer" />
            </div>
        </div>
    </form>

{% endblock content %}
