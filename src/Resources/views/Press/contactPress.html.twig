{% extends "MMCFestivalBundle:Default:layout.html.twig" %}

{% trans_default_domain 'press' %}

{% block content %}
    {{ parent() }}

    <h2 class="art-title">{{ 'contact.title'|trans({}, 'press') }}</h2>
    <p><b>{{ 'contact.first.subtitle'|trans({}, 'press') }}</b></p>
    <p>{{ 'contact.second.subtitle'|trans({}, 'press') }}</p>

    <form action="{{ path('mmc_festival_press_contact') }}" method="post" class="container-fluid">
        {{ form_widget(form._token) }}
        <div class="row">
            <div class="col-xs-3">
                {{ form_row(form.civility) }}
            </div>
            <div class="col-xs-5">
                {{ form_row(form.lastname) }}
            </div>
            <div class="col-xs-4">
                {{ form_row(form.firstname) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-3">
                {{ form_row(form.media) }}
            </div>
            <div class="col-xs-5">
                {{ form_row(form.email) }}
            </div>
            <div class="col-xs-4">
                {{ form_row(form.phone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-6">
                {{ form_row(form.address) }}
            </div>
            <div class="col-xs-2">
                {{ form_row(form.postalCode) }}
            </div>
            <div class="col-xs-4">
                {{ form_row(form.city) }}
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                {{ form_row(form.message) }}
            </div>
            <div class="col-xs-12">
                <input type="submit" class="btn btn-festival btn-block" value="Envoyer" />
            </div>
        </div>
    </form>

{% endblock content %}
